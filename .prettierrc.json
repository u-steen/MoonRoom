{
  "trailingComma": "es5",
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true,
  "bracketSameLine": false,
  "overrides": [
    {
      "files": ["*.html", "*.json"],
      "options": {
        "tabWidth": 3
      }
    }
  ],
  "prettier.bracketSameLine": false,
  "prettier.proseWrap": "never",
  "prettier.printWidth": 100,
  "prettier.htmlWhitespaceSensitivity": "ignore"
}
